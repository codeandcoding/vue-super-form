{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Example form",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "title": "Name",
            "minLength": 3,
            "ui:placeholder": "Please type your name"
        },
        "password": {
            "type": "string",
            "title": "Password",
            "minLength": 3,
            "ui:inputType": "password",
            "ui:placeholder": "Please type your password"
        },
        "email": {
            "type": "string",
            "title": "Email",
            "minLength": 3,
            "ui:inputType": "email",
            "ui:placeholder": "Please type your email"
        },
        "age": {
            "type": "number",
            "title": "Age",
            "minimum": 18,
            "maximum": 60
        },
        "checkboxes": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "foo",
                    "bar",
                    "fuzz",
                    "qux"
                ]
            },
            "ui:widget": "checkbox"
        },
        "newsletter": {
            "type": "boolean",
            "title": "Newsletter"
        },
        "published": {
            "type": "boolean",
            "title": "Published?",
            "ui:widget": "switch"
        },
        "choice": {
            "type": "array",
            "title": "Choice list",
            "items": {
                "type": "string",
                "enum": [
                    "foo",
                    "bar",
                    "fuzz",
                    "qux"
                ]
            }
        },
        "numberSelect": {
            "type": "number",
            "title": "Select",
            "enum": [
                1,
                2,
                3
            ]
        },
        "numberRadio": {
            "type": "number",
            "title": "Radio",
            "enum": [
                1,
                2,
                3
            ],
            "ui:widget": "radio"
        },
        "birthdate": {
            "type": "string",
            "title": "Birthdate",
            "format": "date"
        },
        "year": {
            "type": "number",
            "title": "Year",
            "ui:widget": "year"
        },
        "month": {
            "type": "number",
            "title": "Month",
            "ui:widget": "month"
        },
        "comments": {
            "type": "string",
            "title": "Comments",
            "ui:widget": "textarea",
            "ui:height": 5     
        }
    },
    "required": ["name", "age", "year"]
}
  